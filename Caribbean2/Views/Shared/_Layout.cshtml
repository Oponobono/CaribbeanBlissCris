<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Caribbean2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/sideBar.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/menuCentral.css">
</head>
<body>
    <header>
        <div class="container-fluid bg-dark">
            <div class="row gx-0">
                <!-- Sección de botones visibles en pantallas pequeñas y grandes -->
                <div class="btn-group-container d-flex justify-content-between p-2">
                    <div>
                        <a class="navbar-brand" href="#">
                            <div class="logo-container">
                                <img class="caribean_logo" src="~/img/caribeanbliss_logo.png" width="30" height="30" alt="">
                            </div>
                            CaribbeanBliss
                        </a>
                    </div>

                        <div class="d-flex justify-content-start">
                            <a href="#nosotros" class="nav-link me-3">Nosotros</a>
                            <a href="#ubicacion" class="nav-link me-3">Ubicación</a>
                            <a href="#servicios" class="nav-link me-3">Servicios</a>
                            <a href="#reservas" class="nav-link">Reservas</a>
                        </div>
                    

                    <div>
                        <!-- Si el usuario no está autenticado -->
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <!-- Botones para pantallas pequeñas -->
                            <a class="btn-modern d-flex d-lg-none" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Iniciar sesión"
                               asp-controller="Caribbean" asp-action="Login">
                                <i class="fas fa-sign-in-alt"></i>
                            </a>
                            <a class="btn-modern d-flex d-lg-none" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Registrarse"
                               asp-controller="Usuarios" asp-action="Register">
                                <i class="fas fa-user-plus"></i>
                            </a>

                            <!-- Botones completos visibles solo en pantallas grandes -->
                            <a asp-controller="Login" asp-action="Index" class="btn-modern me-2 d-none d-lg-inline-flex">
                                <i class="fas fa-sign-in-alt"></i> Iniciar sesión
                            </a>
                            <a asp-controller="Usuarios" asp-action="Register" class="btn-modern d-none d-lg-inline-flex">
                                <i class="fas fa-user-plus"></i> Registrarse
                            </a>
                        }
                        else
                        {
                            <!-- Botón de Cerrar sesión visible si el usuario está autenticado -->
                            <a class="btn-modern d-flex d-lg-none" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Cerrar sesión"
                               asp-controller="Login" asp-action="Logout">
                                <i class="fas fa-sign-out-alt"></i>
                            </a>

                            <a asp-controller="Login" asp-action="Logout" class="btn-modern me-2 d-none d-lg-inline-flex">
                                <i class="fas fa-sign-out-alt"></i> Cerrar sesión
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
