@model Caribbean2.Models.Metrica

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Sidebar</title>
        <link rel="stylesheet" href="~/css/sideBar.css">
        <link rel="stylesheet" href="~/css/roles.css">
        <link rel="stylesheet" href="/css/bootstrap.min.css">
        <link rel="stylesheet" href="~/css/menuCentral.css">

        <!-- Favicon -->
        <link href="img/favicon.ico" rel="icon">

        <!-- Google Web Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Nunito:wght@600;700;800&display=swap" rel="stylesheet">

        <!-- Icon Font Stylesheet -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">


        <!-- Libraries Stylesheet -->
        <link href="lib/animate/animate.min.css" rel="stylesheet">
        <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
        <link href="lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

        <!-- Customized Bootstrap Stylesheet -->
        <link href="css/bootstrap.min.css" rel="stylesheet">

        <!-- SweetAlert CSS -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
        <!-- SweetAlert JS -->
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    </head>

    <body>

        <!-- Topbar Star -->
        <div class="container-fluid bg-dark px-5 d-lg-block d justify-content-around mb-2">
            <div class="row gx-0 p-2 align-items-center">
                <!-- Sección de botones visibles en pantallas pequeñas y grandes -->
                <div class="btn-group-container d-flex justify-content-end">
                    <a class="btn-modern d-flex d-lg-none" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Cerrar sesión"
                       asp-controller="Login" asp-action="Logout">
                        <i class="fas fa-sign-out-alt"></i>
                    </a>

                    <a asp-controller="Login" asp-action="Logout" class="btn-modern me-2 d-none d-lg-inline-flex">
                        <i class="fas fa-sign-out-alt"></i> Cerrar sesión
                    </a>
                </div>
            </div>
        </div>
        <!-- Topbar End -->
        <!-- Inicio Seccion Modificable -->
        <h1 class="d-flex justify-content-center mt-3">Gestión de Métricas</h1>

        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-6">
                    <div class="roles-card">
                        <div class="roles-card-header d-flex justify-content-between align-items-center">
                            <div class="text-center flex-grow-1">
                                <h2 class="roles-card-title">Editar Registro</h2>
                            </div>
                        </div>

                        <div class="roles-card-body p-3">
                            <div class="col-md-8 mx-auto">
                                <form asp-action="Edit" id="editForm">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" asp-for="IdMetrica" />
                                    <div class="form-group">
                                        <label asp-for="Fecha" class="control-label"></label>
                                        <input asp-for="Fecha" class="form-control" />
                                        <span asp-validation-for="Fecha" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="IngresosTotales" class="control-label">Ingresos</label>
                                        <input asp-for="IngresosTotales" class="form-control" />
                                        <span asp-validation-for="IngresosTotales" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="TasaOcupacion" class="control-label">Tasa Ocupación</label>
                                        <input asp-for="TasaOcupacion" class="form-control" />
                                        <span asp-validation-for="TasaOcupacion" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                    <label asp-for="OcupacionDiaria" class="control-label">Ocupación Diaria</label>
                                        <input asp-for="OcupacionDiaria" class="form-control" />
                                        <span asp-validation-for="OcupacionDiaria" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                    <label asp-for="OcupacionSemanal" class="control-label">Ocupación Semanal</label>
                                        <input asp-for="OcupacionSemanal" class="form-control" />
                                        <span asp-validation-for="OcupacionSemanal" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="OcupacionMensual" class="control-label">Ocupación Mensual</label>
                                        <input asp-for="OcupacionMensual" class="form-control" />
                                        <span asp-validation-for="OcupacionMensual" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ReservasNuevas" class="control-label">Reservas Nuevas</label>
                                        <input asp-for="ReservasNuevas" class="form-control" />
                                        <span asp-validation-for="ReservasNuevas" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Cancelaciones" class="control-label">Cancelaciones</label>
                                        <input asp-for="Cancelaciones" class="form-control" />
                                        <span asp-validation-for="Cancelaciones" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ImpactoFinancieroCancelaciones" class="control-label">Impacto Cancelaciones</label>
                                        <input asp-for="ImpactoFinancieroCancelaciones" class="form-control" />
                                        <span asp-validation-for="ImpactoFinancieroCancelaciones" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="PromedioDiasAnticipacionReserva" class="control-label">Anticipación Reservas</label>
                                        <input asp-for="PromedioDiasAnticipacionReserva" class="form-control" />
                                        <span asp-validation-for="PromedioDiasAnticipacionReserva" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="NumeroHuespedes" class="control-label">Número Huespedes</label>
                                        <input asp-for="NumeroHuespedes" class="form-control" />
                                        <span asp-validation-for="NumeroHuespedes" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="SuscritosBoletin" class="control-label">Suscritos</label>
                                        <input asp-for="SuscritosBoletin" class="form-control" />
                                        <span asp-validation-for="SuscritosBoletin" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="DuracionPromedioEstadia" class="control-label">Promedio Estadía</label>
                                        <input asp-for="DuracionPromedioEstadia" class="form-control" />
                                        <span asp-validation-for="DuracionPromedioEstadia" class="text-danger"></span>
                                    </div>
                                    
                                    <div class="form-group text-center mt-3">
                                        <input type="submit" value="Guardar" class="btn btn-success" />
                                        <a class="btn btn-secondary ms-2" asp-action="Index">
                                            <i class="bi bi-arrow-left-circle"></i> Regresar
                                        </a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>



        <!-- Fin Seccion Modificable -->

        <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
        <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
        <script src="~/js/index.js"></script>
        <script src="~/js/login.js"></script>
        <script src="~/js/sidebar.js"></script>
        <script src="~/js/roles.js"></script>
        <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="lib/wow/wow.min.js"></script>
        <script src="lib/easing/easing.min.js"></script>
        <script src="lib/waypoints/waypoints.min.js"></script>
        <script src="lib/owlcarousel/owl.carousel.min.js"></script>
        <script src="lib/tempusdominus/js/moment.min.js"></script>
        <script src="lib/tempusdominus/js/moment-timezone.min.js"></script>
        <script src="lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            // Al cargar la página, actualizamos el label con el estado inicial
            window.onload = function () {
                updateEstadoLabel();
            };

            // Función para actualizar el texto del label según el estado del switch
            function updateEstadoLabel() {
                var switchInput = document.getElementById('EstadoRol');
                var label = document.getElementById('estadoLabel');

                // Actualizamos el texto dependiendo de si el switch está activado o no
                if (switchInput.checked) {
                    label.textContent = "Activado";
                    label.style.color = "green";  // Puedes cambiar el color si deseas
                } else {
                    label.textContent = "Inactivo";
                    label.style.color = "red";  // Puedes cambiar el color si deseas
                }
            }

            // Añadimos un evento para actualizar el label cuando el switch cambie
            document.getElementById('EstadoRol').addEventListener('change', updateEstadoLabel);
            document.getElementById('editForm').addEventListener('submit', function (e) {
                e.preventDefault();
                Swal.fire({
                    title: '¿Estás seguro?',
                    text: "Estás a punto de editar este rol.",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Sí, guardar cambios',
                    cancelButtonText: 'Cancelar'
                }).then((result) => {
                    if (result.isConfirmed) {
                        this.submit();
                    }
                });
            });
        </script>

    </body>

</html>
